#!/bin/bash

# GitHub SSH Setup Helper Script

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${BLUE}üîë GitHub SSH Key Setup Helper${NC}"
echo ""

# Check if SSH key exists
if [[ -f "$HOME/.ssh/id_ed25519.pub" ]]; then
    echo -e "${GREEN}‚úÖ SSH public key found!${NC}"
    echo ""
    echo -e "${YELLOW}üìã Your public key:${NC}"
    echo "----------------------------------------"
    cat "$HOME/.ssh/id_ed25519.pub"
    echo "----------------------------------------"
    echo ""
    
    # Copy to clipboard if available
    if command -v wl-copy >/dev/null 2>&1; then
        cat "$HOME/.ssh/id_ed25519.pub" | wl-copy
        echo -e "${GREEN}‚úÖ Key copied to clipboard (Wayland)${NC}"
    elif command -v xclip >/dev/null 2>&1; then
        cat "$HOME/.ssh/id_ed25519.pub" | xclip -selection clipboard
        echo -e "${GREEN}‚úÖ Key copied to clipboard (X11)${NC}"
    else
        echo -e "${YELLOW}üí° Install wl-copy or xclip to auto-copy to clipboard${NC}"
    fi
    
    echo ""
    echo -e "${BLUE}üåê Next steps:${NC}"
    echo "1. Go to: https://github.com/settings/keys"
    echo "2. Click 'New SSH key'"
    echo "3. Give it a title (e.g., 'idunkoncode-$(hostname)')"
    echo "4. Paste the key above"
    echo "5. Click 'Add SSH key'"
    echo ""
    
    # Test SSH connection
    echo -e "${BLUE}üß™ Testing SSH connection to GitHub...${NC}"
    if ssh -T git@github.com 2>&1 | grep -q "successfully authenticated"; then
        echo -e "${GREEN}‚úÖ SSH connection to GitHub successful!${NC}"
    else
        echo -e "${YELLOW}‚ö†Ô∏è  SSH connection not yet configured. Add your key to GitHub first.${NC}"
    fi
    
else
    echo -e "${RED}‚ùå No SSH key found!${NC}"
    echo ""
    echo -e "${BLUE}üîß Generating new SSH key...${NC}"
    ssh-keygen -t ed25519 -C "idunkoncode@proton.me" -f "$HOME/.ssh/id_ed25519" -N ""
    echo -e "${GREEN}‚úÖ SSH key generated!${NC}"
    echo ""
    echo "Run this script again to get your public key."
fi

echo ""
echo -e "${BLUE}üìö Useful commands:${NC}"
echo "‚Ä¢ View public key: cat ~/.ssh/id_ed25519.pub"
echo "‚Ä¢ Test GitHub SSH: ssh -T git@github.com"
echo "‚Ä¢ Clone repo with SSH: git clone git@github.com:username/repo.git"
